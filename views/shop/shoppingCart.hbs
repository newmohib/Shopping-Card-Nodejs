{{#if products}}
<div class="table-responsive mt-5">
    <table class="table table-bordered">
        <caption>
            <div>
                <div class="col-sm-4 col-md-2 ">
                    <a href="/checkout" class="btn btn-primary">Checkout</a>
                </div>
            </div>
        </caption>
        <thead>
            <tr>
                <th scope="col">Serial</th>
                <th scope="col" colspan="2">Product</th>
                <th scope="col">Quintity</th>
                <th scope="col">Action</th>
                <th scope="col">Amount</th>
            </tr>
        </thead>
        <tbody>

            {{# each products}}
            <tr>
                <th scope="row">{{this.serial}}</th>
                <td colspan="2">{{this.item.title}}</td>
                <td>{{this.qty}}</td>
                <td>
                    <div class="btn-group dropright">
                        <button type="button" class="btn btn-primary dropdown-toggle btn-sm" data-toggle="dropdown"
                            aria-haspopup="true" aria-expanded="false">
                            Action
                        </button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#">Reduce by 1</a>
                            <a class="dropdown-item" href="#">Remove All</a>
                        </div>
                    </div>
                </td>
                <td>{{this.price}}</td>
            </tr>

            {{/each}}
            <tr>
                <th scope="row" colspan="5">Total</th>
                <th class="table-active" >{{this.totalPrice}}</th>
            </tr>
        </tbody>
    </table>
</div>
{{/if}}